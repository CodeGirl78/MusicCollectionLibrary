<h1>Delete Albums</h1>

<form method="post">
    @foreach (var album in ViewBag.albums)
    {
        <div class="form-group">
            <label>
                <span>@album.Name</span>
                <input type="checkbox" name="albumIds" value="@album.Id" class="form-control">
            </label>
        </div>
    }

    <input type="submit" value="Delete Selected Albums" class="btn btn-danger">

</form>